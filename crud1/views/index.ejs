<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Inicio'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>

    <!-- Banner -->
    <div class="banner"></div>

    <!-- última visita -->
    <div class="container products-wrapper">
		
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Basado en tu última visita</h2>
        </div>
        <!-- Show the "visited" products -->
		<% visitado.forEach(producto => { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= producto.id %> ">
              <figure class="product-box_image">
                <img src="/images/products/<%= producto.image %> " alt="<%= producto.name %>" />
              </figure>
              <article class="product-box_data">
                <% if (producto.discount>0) { %>
                  <h2>$<%=toThousand(precioFinal(producto.discount,producto.price).toFixed(0)) %></h2>
                <% } else{%>
                <h2>$<%=toThousand(producto.price)%></h2>
                <% } %>
                <% if (producto.discount>0) { %>
                <span><%= producto.discount %> % OFF</span>
                <% } %>
                <p><%= producto.name %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
		<% }) %>
      </div>
    </div>


    <!-- Ofertas -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Ofertas</h2>
        </div>
        <!-- Show the "in-sale" products -->
		<% oferta.forEach(producto => { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= producto.id %> ">
              <figure class="product-box_image">
                <img src="/images/products/<%= producto.image %> " alt="imagen de producto" />
              </figure>
              <article class="product-box_data">
                <% if (producto.discount>0) { %>
                  <h2>$<%=toThousand(precioFinal(producto.discount,producto.price).toFixed(0)) %></h2>
                <% } else{%>
                <h2>$<%=toThousand(producto.price)%></h2>
                <% } %>
                <span><%= producto.discount %> % OFF</span>
                <p><%= producto.name %> </p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
		<% }) %>
      </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
  </body>
</html>